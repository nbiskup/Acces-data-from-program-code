<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.controller.PeopleCourseController">
   <children>
      <TabPane fx:id="tpContent" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="tabList" style="-fx-background-color: lightblue;" text="List students">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="tvStudents" layoutX="6.0" layoutY="7.0" prefHeight="293.0" prefWidth="600.0" AnchorPane.bottomAnchor="78.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                          <columns>
                            <TableColumn fx:id="tcStudentFirstName" prefWidth="75.0" text="First name" />
                            <TableColumn fx:id="tcStudentLastName" prefWidth="75.0" text="Last name" />
                              <TableColumn fx:id="tcStudentJmbag" prefWidth="75.0" text="JMBAG" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button layoutX="314.0" layoutY="307.0" mnemonicParsing="false" onAction="#editStudent" prefHeight="35.0" prefWidth="72.0" style="-fx-background-color: green;" text="Edit" textFill="WHITE" />
                        <Button layoutX="514.0" layoutY="307.0" mnemonicParsing="false" onAction="#deleteStudent" prefHeight="35.0" prefWidth="72.0" style="-fx-background-color: red;" text="Delete" textFill="#f8f6f6" />
                        <Button fx:id="btnStudentCourses" layoutX="399.0" layoutY="307.0" mnemonicParsing="false" onAction="#editStudentCourses" prefHeight="35.0" prefWidth="101.0" style="-fx-background-color: grey;" text="Edit courses" textFill="WHITE" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="tabEdit" style="-fx-background-color: orange;" text="Edit student">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ImageView fx:id="ivStudent" fitHeight="245.0" fitWidth="200.0" layoutX="324.0" layoutY="47.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../assets/no_image.png" />
                           </image>
                        </ImageView>
                        <Button layoutX="324.0" layoutY="275.0" mnemonicParsing="false" onAction="#upload" prefHeight="47.0" prefWidth="85.0" style="-fx-background-color: purple;" text="Upload" textFill="WHITE" />
                        <Button layoutX="441.0" layoutY="275.0" mnemonicParsing="false" onAction="#commit" prefHeight="47.0" prefWidth="83.0" style="-fx-background-color: blue;" text="Commit" textFill="WHITE" />
                        <Label layoutX="31.0" layoutY="70.0" prefHeight="17.0" prefWidth="56.0" text="First name" />
                        <TextField fx:id="tfFirstName" layoutX="106.0" layoutY="66.0" />
                        <Label fx:id="lbFirstNameError" layoutX="272.0" layoutY="70.0" prefHeight="17.0" prefWidth="18.0" text="X" textFill="#f80707" visible="false" />
                        <Label layoutX="31.0" layoutY="126.0" prefHeight="17.0" prefWidth="56.0" text="Last name" />
                        <TextField fx:id="tfLastName" layoutX="106.0" layoutY="122.0" />
                        <Label fx:id="lbLastNameError" layoutX="272.0" layoutY="126.0" prefHeight="17.0" prefWidth="18.0" text="X" textFill="#f80707" visible="false" />
                        <Label layoutX="31.0" layoutY="177.0" prefHeight="17.0" prefWidth="56.0" text="JMBAG" />
                        <TextField fx:id="tfJmbag" layoutX="106.0" layoutY="173.0" />
                        <Label fx:id="lbJmbagError" layoutX="272.0" layoutY="177.0" prefHeight="17.0" prefWidth="18.0" text="X" textFill="#f80707" visible="false" />
                        <Label fx:id="lbIconError" layoutX="546.0" layoutY="47.0" prefHeight="17.0" prefWidth="18.0" text="X" textFill="#f80707" visible="false" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab fx:id="tabStudentCourses" style="-fx-background-color: grey;" text="Student courses">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="cbStudent" layoutX="25.0" layoutY="60.0" onAction="#cbStudentChanged" prefHeight="26.0" prefWidth="178.0" />
                        <Label layoutX="25.0" layoutY="42.0" text="Student:" />
                        <TableView fx:id="tvStudentCourses" layoutX="258.0" layoutY="42.0" prefHeight="200.0" prefWidth="300.0">
                          <columns>
                            <TableColumn fx:id="tcCourseStudentName" prefWidth="200.0" text="Name" />
                            <TableColumn fx:id="tcCourseStudentECTS" prefWidth="100.0" text="ECTS" />
                          </columns>
                        </TableView>
                        <ComboBox fx:id="cbCourseStudent" layoutX="25.0" layoutY="127.0" prefHeight="26.0" prefWidth="178.0" />
                        <Label layoutX="25.0" layoutY="109.0" text="Course:" />
                        <Button fx:id="btnAddCourse" layoutX="114.0" layoutY="170.0" mnemonicParsing="false" onAction="#addCourse" prefHeight="30.0" prefWidth="90.0" style="-fx-background-color: green;" text="Add" textFill="WHITE" />
                        <Button fx:id="btnRemoveCourse" layoutX="474.0" layoutY="256.0" mnemonicParsing="false" onAction="#removeCourse" prefHeight="30.0" prefWidth="84.0" style="-fx-background-color: red;" text="Remove" textFill="WHITE" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
